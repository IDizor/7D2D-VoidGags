<dizor>

  <!-- windowBackpack -->
  <set xpath="/windows/window[@name='windowBackpack']/panel[@name='header']/rect/combobox[@name='cbxLockedSlots']/@pos">-135,-7</set>
  <set xpath="/windows/window[@name='windowBackpack']/panel[@name='header']/rect/combobox[@name='cbxLockedSlots']/@width">115</set>

  <!-- windowVehicleStorage -->
  <append xpath="/windows/window[@name='windowVehicleStorage']/panel[@name='header']/rect[@controller='ContainerStandardControls']">
    <combobox depth="3" name="cbxLockedSlots" pos="15,-7" width="150" height="30" tooltip_key="xuiStashLockedSlots" type="ComboBoxInt" value_min="0" value_max="{container_slots}" value_wrap="false" value_increment="1" />
  </append>

  <!-- windowLooting -->
  <append xpath="/windows/window[@name='windowLooting']/panel[@name='header']/rect[@controller='ContainerStandardControls']">
    <combobox depth="3" name="cbxLockedSlots" pos="15,-7" width="150" height="30" tooltip_key="xuiStashLockedSlots" type="ComboBoxInt" value_min="0" value_max="{container_slots}" value_wrap="false" value_increment="1" visible="{is_drone}" />
  </append>

</dizor>