<dizor>

  <!-- windowBackpack -->
  <append xpath="/windows/window[@name='windowBackpack']/panel[@name='header']/rect[@controller='ContainerStandardControls']">
    <combobox depth="3" name="cbxLockedSlots" pos="-155,-7" width="130" height="30" tooltip_key="xuiStashLockedSlots" type="ComboBoxInt" value_min="0" value_max="45" value_wrap="false" value_increment="1" />
    <button   depth="3" name="btnSpreadLoot" sprite="ui_game_symbol_misc_crafting" tooltip_key="lblSpreadLoot" pos="280, -21" style="icon32px, press, hover" pivot="center" sound="[paging_click]" />
  </append>

  <set xpath="/windows/window[@name='windowBackpack']/panel[@name='header']/label[@text='{currencyamount}']/@pos">432,-8</set>
  <set xpath="/windows/window[@name='windowBackpack']/panel[@name='header']/sprite[@name='costIcon']/@pos">537,-10</set>

  <!-- windowVehicleStorage -->
  <append xpath="/windows/window[@name='windowVehicleStorage']/panel[@name='header']/rect[@controller='ContainerStandardControls']">
    <combobox depth="3" name="cbxLockedSlots" pos="15,-7" width="150" height="30" tooltip_key="xuiStashLockedSlots" type="ComboBoxInt" value_min="0" value_max="{container_slots}" value_wrap="false" value_increment="1" />
  </append>

  <!-- windowLooting -->
  <append xpath="/windows/window[@name='windowLooting']/panel[@name='header']/rect[@controller='ContainerStandardControls']">
    <combobox depth="3" name="cbxLockedSlots" pos="15,-7" width="150" height="30" tooltip_key="xuiStashLockedSlots" type="ComboBoxInt" value_min="0" value_max="{container_slots}" value_wrap="false" value_increment="1" visible="{is_drone}" />
    <button depth="3" name="btnSpreadReceiver" sprite="ui_game_symbol_treasure" tooltip_key="lblSpreadReceiver" pos="154, -22" style="icon32px, press, hover" pivot="center" sound="[paging_click]" visible="{is_container_block}" />
    <button depth="4" name="btnSpreadIgnorer"  sprite="ui_game_symbol_x"        tooltip_key="lblSpreadIgnorer"  pos="154, -22" style="icon32px, press, hover" pivot="center" sound="[paging_click]" visible="{# is_container_block and auto_spread_ignore}" defaultcolor="[red]" hovercolor="[red]" hoverscale="1.0" />
  </append>

</dizor>